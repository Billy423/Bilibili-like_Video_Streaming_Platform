<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bilibili.dao.ContentDao">

    <insert id="addContent" parameterType="com.example.bilibili.domain.Content" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            t_content (
                contentDetail,
                createTime
            ) VALUES (
                #{contentDetail,typeHandler=com.example.bilibili.service.handler.JsonObjectTypeHandler},
                now()
            )
    </insert>

</mapper>