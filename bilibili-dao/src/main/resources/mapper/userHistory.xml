<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bilibili.dao.UserHistoryDao">

    <select id="pageCountUserVideoHistory" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT
            count(1)
        FROM
            t_video_view
        WHERE
            userId = #{userId}
    </select>

    <select id="pageListUserVideoHistory" parameterType="java.util.Map"
            resultType="com.example.bilibili.domain.UserVideoHistory">
        SELECT
            vv.videoId,
            vv.userId,
            v.url,
            v.thumbnail,
            v.title,
            v.description,
            vv.createTime
        FROM
            t_video_view vv
                left join t_video v on vv.videoId = v.id
        WHERE
            vv.userId = #{userId}
        order by vv.createTime desc
            limit #{start}, #{limit}
    </select>
</mapper>